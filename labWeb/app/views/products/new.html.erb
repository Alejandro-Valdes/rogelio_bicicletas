<center>
<h1>Agregar Producto Rogelio Bicicletas</h1>
</center>
<div style="margin:0 auto" align=center>
	<%= form_for :product do |f| %>
	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>
	 
	  <p>
	    <%= f.label :text %><br>
	    <%= f.text_area :text %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</div>